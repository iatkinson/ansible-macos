[push]
	default = upstream
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr, %cn)%Creset' --abbrev-commit --date=relative
	branches = for-each-ref --format='%(authorname)%09%(refname:short)' refs/remotes
        merged = branch -r --merged origin/develop
        notpushed = log --branches --not --remotes --simplify-by-decoration --decorate --oneline
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore_global



